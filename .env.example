# Polymarket Live Trading Credentials
# Copy to .env and fill in your values:  cp .env.example .env

# Polygon wallet private key (with 0x prefix)
POLY_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# API credentials (derived from private key)
# Run: python scripts/setup_credentials.py
POLY_API_KEY=
POLY_API_SECRET=
POLY_API_PASSPHRASE=

# Trading mode: true = log only, false = execute real trades
DRY_RUN=true

# Circuit breaker thresholds
CIRCUIT_BREAKER_MAX_LOSS_USD=500
CIRCUIT_BREAKER_MAX_LOSS_PCT=0.10
